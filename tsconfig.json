{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": { "@/*": ["./*"] },
		"plugins": [{ "name": "next" }],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2017"
	},
	"exclude": ["node_modules"],
	"include": [
		"next-env.d.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	]
}
